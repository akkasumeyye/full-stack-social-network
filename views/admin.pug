doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Admin Page
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC', crossorigin='anonymous')
    link(rel="stylesheet", href="/css/admin.css")

    
  body
.title
  h2 Admin Page
  .underline
.tabContainer
#tabs
  ul
    li
      a(href='#tabs-1').btn Posts List
    li
      a(href='#tabs-2').btn Users Data List
  #tabs-1
    h2 All of the Posts
    p
      | 
      .poscontainer
        each post in posts ? posts : []
          ul.li-content 
            li #{post.content}
            .icons
              button.approved
                i.fas.fa-check
              button.rejected
                i.fas.fa-xmark
  #tabs-2
    h2 Table of the all users data
    p
      |
      table.table
        thead
          tr
            th 
            th(scope='col') username
            th(scope='col') email
            th(scope='col') password
            th(scope='col') firstname
            th(scope='col') lastname
        tbody
        each user in users ? users : []
          tr
            th
            td #{user.username}
            td #{user.email}
            td #{user.password}
            td #{user.firstName}
            td #{user.lastName}
 


 
