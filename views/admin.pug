doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Admin Page
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC', crossorigin='anonymous')
    link(rel="stylesheet", href="/css/admin.css")
    
  body
.title
  h2 Admin Page
  .underline
p
  a.btn.btn-primary(data-bs-toggle='collapse' href='#collapseOne' role='button' aria-expanded='false' aria-controls='collapseExample')
    | Post List
#collapseOne.collapse
  .card.card-body
    .poscontainer
        each post in posts ? posts : []
          ul.li-content 
            li #{post.content}
            .icons
              button.approved
                i.fas.fa-check
              button.rejected
                i.fas.fa-xmark
p
  a.btn.btn-primary(data-bs-toggle='collapse' href='#collapseTwo' role='button' aria-expanded='false' aria-controls='collapseExample')
    | User List
#collapseTwo.collapse
  .card.card-body
    table.table
        thead
          tr
            th 
            th(scope='col') username
            th(scope='col') email
            th(scope='col') password
            th(scope='col') firstname
            th(scope='col') lastname
        tbody
        each user in users ? users : []
          tr
            th
            td #{user.username}
            td #{user.email}
            td #{user.password}
            td #{user.firstName}
            td #{user.lastName}
 
      
script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js')
